<link rel="stylesheet" type="text/css" href="<?php echo ($urlBase . 'extensions/community/templates/lastchanges.css')?>">
<?php if ($this->has('warningmessage')): ?>
    <p class="messagebox info"><?php echo $this->warningmessage ?></p>
<?php endif?>
