                <p style="line-height: 2ex; font-size: 12px;"><a  resource="<?php echo $change['resource'] ?>" class="Resource hasMenu"
               about="<?php echo $change['resource'] ?>"
               href="<?php echo $change['rhref'] ?>">
                <?php echo $change['rname'] ?>
                </p>
                </a>
                <div style="position: relative; margin-top: -8px; font-size: xx-small;">
                    by
                    <a class="Resource hasMenu" about="<?php echo $change['aresource'] ?>" href="<?php echo $change['ahref'] ?>"><?php echo $change['author'] ?></a>
                </div>
            </div>
        </li>
<?php endforeach; ?>
